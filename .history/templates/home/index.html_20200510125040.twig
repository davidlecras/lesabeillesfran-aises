{% extends 'base.html.twig' %}
{% block msg %}{% endblock %}

{% block body %}
	<!-- Carousel Start-->
	<section>
		<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="imgCar" src="{{asset('images/carousel/miel2-750x410.jpg')}}" class="d-block w-100" alt="..."/>
				</div>
				<div class="carousel-item">
					<img class="imgCar" src="{{asset('images/carousel/abeille copie.JPG')}}" class="d-block w-100" alt="..."/>
				</div>
				<div class="carousel-item">
					<img class="imgCar" src="{{asset('images/carousel/shutterstock_311400119-min.jpg')}}" class="d-block w-100" alt="..."/>
				</div>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</section>
	<!-- Carousel Finish-->

	<!-- NewBeekeepers Section Start-->
	<section class=" container newHoneyMakers py-5">
		<h2 class="text-center">Nos nouveaux appiculteurs</h3>
		<div
			class="row pt-3">
			{# Loop for to display the last 3 beekeepers #}
			{% for newBeekeeper in newBeekeepers %}
				<div class="col-lg-4 col-md-4 mb-4">
					<div class="card h-100">
						<img class="card-img-top imgHomeBeekeeper" src="{{asset('images/appiculteur/' ~ newBeekeeper.image)}}" alt="{{newBeekeeper.name}}"/>
						<div class="card-body text-center">
							<h4 class="card-title">
								{{newBeekeeper.name}}
							</h4>
							<h5>{{newBeekeeper.region}}</h5>
							<p class="card-text">{{ newBeekeeper.description|length >200 ? newBeekeeper.description|slice(0, 200) ~ ' ...' : newBeekeeper.description  }}</p>
						</div>
						<div class="card-footer">
							<a href="{{path('beekeepers')}}#{{ newBeekeeper.name|slugify|lower}}" class="btn btn-colorSecondary btn-lg btn-block">Voir
								{{newBeekeeper.name}}</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<h5 class="text-center my-4">
			<a class="btn  btn-lg btn-colorPrimary" href="{{path('beekeepers')}}">Voir tous nos appiculteurs</a>
		</h5>
	</section>
	<!-- NewBeekeepers Section finish-->

	<!-- LastNewProduct start-->
	<section class="newProducts">
		<h2 class="text-center text-white py-5">Nos nouveaux produits</h3>
		{# New Products for hight devices #}
		<div class="row" id="cardNewProductsHigh">
			{% for newProduct in newProducts %}
				<div class="card mb-3 col-sm-12 NewProduct my-auto" style="max-width: 45%;">
					<div class="row no-gutters">
						<div class="col-md-6">
							<a href="{{path('show_product',{'id': newProduct.id})}}">
								<img src="{{asset('images/miel/' ~ newProduct.image)}}" class="card-img h-100" alt="{{newProduct.name}}"></a>
						</div>
						<div class="col-md-6 my-auto">
							<div class="card-body">
								<h5 class="card-title text-primary">
									<a href="{{path('show_product',{'id': newProduct.id})}}">
										{{newProduct.name}}
									</a>
								</h5>
								<p class="card-text">{{ newProduct.description|length >200 ? newProduct.description|slice(0, 200) ~ ' ...' : newProduct.description  }}</p>
								<hr>
								<p class="card-text">
									<strong>
										Poids:
										{{newProduct.weightInGr}}gr</strong>
								</p>
								<p class="card-text">
									<strong>
										Prix:
										{{newProduct.price| format_currency('EUR')}}</strong>
								</p>
								<hr>
								<p class="card-text">Produit par:
									{{newProduct.beekeeper.name}}</p>
								<p class="card-text">En provenance de:
									{{newProduct.beekeeper.region}}</p>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="row" id="cardNewProductsSmall">
			{% for newProduct in newProducts %}
				<div class="col-lg-6 col-md-6 my-4 mx-2">
					<div class="card h-100">
						<img class="card-img-top" src="{{asset('images/miel/' ~ newProduct.image)}}" alt="{{newProduct.name}}"/>
						<div class="card-body text-center">
							<h4 class="card-title">
								<a href="{{path('show_product',{'id': newProduct.id})}}" ">
									{{newProduct.name}}
								</a>
							</h4>
							<h5>{{newProduct.price| format_currency('EUR')}}</h5>

							<p class="card-text">{{ newProduct.description|length >200 ? newProduct.description|slice(0, 200) ~ ' ...' : newProduct.description  }}</p>
						</div>
						<div class="card-footer">
							<p class="card-text">Produit par:
								{{newProduct.beekeeper.name}}</p>
							<p class="card-text">En provenance de:
								{{newProduct.beekeeper.region}}</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<h5 class="text-center my-4">
			<a href="{{path('showAllProducts')}}" class="btn btn-colorSecondary btn-lg my-5">Voir la liste compl√®te de nos miels</a>
		</h5>
	</section>
	<!-- LastNewProduct Finish-->
{% endblock %}
