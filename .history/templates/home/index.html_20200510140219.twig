{% extends 'base.html.twig' %}
{% block msg %}{% endblock %}

{% block body %}
	<!-- Carousel Start-->
	<section>
		<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="imgCar" src="{{asset('images/carousel/miel2-750x410.jpg')}}" class="d-block w-100" alt="..."/>
				</div>
				<div class="carousel-item">
					<img class="imgCar" src="{{asset('images/carousel/abeille copie.JPG')}}" class="d-block w-100" alt="..."/>
				</div>
				<div class="carousel-item">
					<img class="imgCar" src="{{asset('images/carousel/shutterstock_311400119-min.jpg')}}" class="d-block w-100" alt="..."/>
				</div>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</section>
	<!-- Carousel Finish-->

	<!-- NewBeekeepers Section Start-->
	<section class=" container py-5">
		<h2 class="text-center">Nos nouveaux appiculteurs</h3>
		<div
			class="row pt-3">
			{# Loop for to display the last 3 beekeepers #}
			{% for newBeekeeper in newBeekeepers %}
				<div class="col-lg-4 col-md-4 mb-4">
					<div class="card h-100">
						<img class="card-img-top imgHomeBeekeeper" src="{{asset('images/appiculteur/' ~ newBeekeeper.image)}}" alt="{{newBeekeeper.name}}"/>
						<div class="card-body text-center">
							<h4 class="card-title">
								{{newBeekeeper.name}}
							</h4>
							<h5>{{newBeekeeper.region}}</h5>
							<p class="card-text">{{ newBeekeeper.description|length >200 ? newBeekeeper.description|slice(0, 200) ~ ' ...' : newBeekeeper.description  }}</p>
						</div>
						<div class="card-footer">
							<a href="{{path('beekeepers')}}#{{ newBeekeeper.name|slugify|lower}}" class="btn btn-colorSecondary btn-lg btn-block">Voir
								{{newBeekeeper.name}}</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<h5 class="text-center my-4">
			<a class="btn  btn-lg btn-colorPrimary" href="{{path('beekeepers')}}">Voir tous nos appiculteurs</a>
		</h5>
	</section>
	<!-- NewBeekeepers Section finish-->
	<section></section>
	<!-- LastNewProduct start-->
	<section class="bg-priamry"></section>

{% endblock %}
