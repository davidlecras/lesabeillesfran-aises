{% extends 'base.html.twig' %}
{% block msg %}{% endblock %}

{% block body %}
	<!-- Carousel Start-->
	<section>
		<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="imgCar" src="{{asset('images/carousel/miel2-750x410.jpg')}}" class="d-block w-100" alt="..."/>
				</div>
				<div class="carousel-item">
					<img class="imgCar" src="{{asset('images/carousel/abeille copie.JPG')}}" class="d-block w-100" alt="..."/>
				</div>
				<div class="carousel-item">
					<img class="imgCar" src="{{asset('images/carousel/shutterstock_311400119-min.jpg')}}" class="d-block w-100" alt="..."/>
				</div>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</section>
	<!-- Carousel Finish-->

	<!-- NewBeekeepers Section Start-->
	<section class=" container newHoneyMakers py-5">
		<h2 class="text-center">Nos nouveaux appiculteurs</h3>
		<div class="row pt-3">
			{% for newBeekeeper in newBeekeepers %}

				<div class="col-lg-4 col-md-4 mb-4">
					<div class="card h-100">
						<a href="#"><img class="card-img-top" src="{{asset('images/appiculteur/' ~ newBeekeeper.image)}}" alt="{{newBeekeeper.name}}" style="height: 25vh"/></a>
						<div class="card-body text-center">
							<h4 class="card-title">
								{{newBeekeeper.name}}
							</h4>
							<h5>{{newBeekeeper.region}}</h5>
							<p class="card-text">{{ newBeekeeper.description|length >200 ? newBeekeeper.description|slice(0, 200) ~ ' ...' : newBeekeeper.description  }}</p>

						</p>
					</div>
					<div class="card-footer">
						<a href="{{path('beekeepers')}}#{{ newBeekeeper.name|slugify|lower}}" class="btn btn-warning btn-lg btn-block">Voir
							{{newBeekeeper.name}}</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<h5 class="text-center my-4">
		<a class="btn  btn-lg btn-colorPrimary" href="{{path('beekeepers')}}">Voir tous nos appiculteurs</a>
	</h5>
</section>
<!-- NewBeekeepers Section finish-->

<!-- LastNewProduct start-->
<section class="newProducts">
	<h2 class="text-center text-white py-5">Nos nouveaux produits</h3>
	<div class="row" id="cardNewProductsHigh">
		{% for newProduct in newProducts %}
			<div class="card mb-3 NewProduct" style="max-width: 45%;">
				<div class="row no-gutters">
					<div class="col-md-6">
						<a href="#">
							<img src="{{asset('images/miel/' ~ newProduct.image)}}" class="card-img h-100" alt="{{newProduct.name}}"></a>
					</div>
					<div class="col-md-6">
						<div class="card-body">
							<h5 class="card-title text-primary">
								<a href="#">
									{{newProduct.name}}
								</a>
							</h5>
							<p class="card-text">{{newProduct.description}}</p>
							<p class="card-text">
								<strong>
									Prix:
									{{newProduct.price| format_currency('EUR')}}</strong>
							</p>
							<hr>
							<p class="card-text">Produit par:
								{{newProduct.beekeeper.name}}</p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<h5 class="text-center my-4">
		<a href="#" class="btn btn-warning btn-lg">Voir la liste compl√®te de nos miels</a>

	</h5>
</section>
<!-- LastNewProduct Finish-->

<!-- /Formulaire de contact  avec ancre-->
<section class=" m-auto bg-warning p-5 text-dark" id="formContact">
	<div class="col-11 mx-auto" style="width: 800px">
		<h2 class="text-center">Contactez-nous</h2>
		<form>
			<div class="form-group">
				<label>Adresse email</label>
				<input type="email" class="form-control d-flex" placeholder="Entrez votre adresse email" required/>
				<small id="emailHelp" class="form-text text-muted">Nous ne partagerons pas votre adresse email.</small>
			</div>
			<div class="form-group">
				<label>Objet</label>
				<input type="text" class="form-control d-flex" placeholder="Entrez votre adresse email" required/>
				<small id="emailHelp" class="form-text text-muted">Nous ne partagerons pas votre adresse email.</small>
			</div>
			<div class="form-group">
				<label>Message</label>
				<textarea class="form-control d-flex" id="exampleFormControlTextarea1" rows="3"></textarea>
			</div>
			<button type="submit" class="btn btn-outline-light">Soumettre</button>
		</form>
	</div>
</section>{% endblock %}
