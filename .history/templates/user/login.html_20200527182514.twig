{% extends 'base.html.twig' %}

{% block title %}Les abeilles françaises:Connexion!
{% endblock %}

{% block monTitre %}Connexion à votre espace membre
{% endblock %}
{% block body %}
	<div class="container boxBar">

		<div class="row">
			<div class="col-12">
				<div class="panel panel-default my-5 d-flex justify-content-center flex-column">
					<div class="panel-heading">
						<h3 class="panel title text-center">Veuillez vous connecter</h3>
					</div>
					<div class="panel-body">
						<form action="{{path('login')}}" method="POST">
							<fieldset>
								<div class="form-group">
									<input type="email" name="_email" id="inputEmail" class="form-control" placeholder="Votre e-mail" required autofocus value="{{lastUserName}}">
								</div>
								<div class="form-group">
									<input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
								</div>
								<div class="checkbox mb-3">
									<label>
										<input type="checkbox" name="_remember_me">
										Se souvenir de moi
									</label>
								</div>
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
								<button class="col-12 btn btn-colorPrimary shadow btn-lock text-center">
									Me connecter
								</button>
								{% if error %}
									<div class="alert alert-warning mt-5 text-center">
										<p>Authentification echouée</p>
									</div>
								{% endif %}
							</fieldset>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
