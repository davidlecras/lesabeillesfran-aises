{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	{{form_start(contactForm)}}
	{{form_widget(contactForm)}}
	{{form_end(contactForm)}}
{% endblock %}
<!-- /Formulaire de contact  avec ancre-->
<section class=" m-auto bg-warning p-5 text-dark">
	<div class="col-11 mx-auto" style="width: 800px">
		<h2 class="text-center">Contactez-nous</h2>
		<form>
			<div class="form-group">
				<label>Adresse email</label>
				<input type="email" class="form-control d-flex" placeholder="Entrez votre adresse email" required/>
				<small id="emailHelp" class="form-text text-muted">Nous ne partagerons pas votre adresse email.</small>
			</div>
			<div class="form-group">
				<label>Objet</label>
				<input type="text" class="form-control d-flex" placeholder="Objet de cet email" required/>
			</div>
			<div class="form-group">
				<label>Message</label>
				<textarea class="form-control d-flex" id="exampleFormControlTextarea1" rows="5"></textarea>
			</div>
			<button type="submit" class="btn btn-outline-light">Soumettre</button>
		</form>
	</div>
</section>
